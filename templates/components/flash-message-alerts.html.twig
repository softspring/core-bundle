{% deprecated 'The "@SfsCore/components/flash-message-alerts.html.twig" template is deprecated.' %}
{% if app.session.flashBag.peekAll|length %}
<div class="fixed-top w-50 float-right m-5">
{% for type, messages in app.session.flashbag.all %}
    {% for message in messages %}
        <div class="alert alert-{{ type|replace({'error':'danger'}) }} alert-dismissible fade show" role="alert">
            {{ message|raw }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}
</div>
{% endif %}
